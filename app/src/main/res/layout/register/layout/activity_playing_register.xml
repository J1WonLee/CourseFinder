<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".playingRegister.PlayingRegister"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="코스명 입력"
            android:gravity="center"
            android:textSize="24sp"
            android:textAppearance="@style/text1">

        </EditText>

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:text="첫번째 대카테고리 선택"
            android:background="@drawable/category_textbox"
            android:textAppearance="@style/text"/>

        <GridView
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:id="@+id/gridViewId"
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:numColumns="3"/>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:text="두번째 대카테고리 선택"
            android:background="@drawable/category_textbox"
            android:textAppearance="@style/text"/>

        <GridView
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:id="@+id/gridViewId2"
            android:layout_width="match_parent"
            android:layout_height="370dp"
            android:numColumns="3"/>


        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="세번째 대카테고리"
            android:padding="15dp"
            android:background="@drawable/category_textbox"
            android:textAppearance="@style/text"/>

        <GridView
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:id="@+id/gridViewId3"
            android:layout_width="match_parent"
            android:layout_height="370dp"
            android:numColumns="3"/>

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="네번째 대카테고리"
            android:padding="15dp"
            android:background="@drawable/category_textbox"
            android:textAppearance="@style/text"/>

        <GridView
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:id="@+id/gridViewId4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:numColumns="3"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:padding="20dp"
            >

            <Button
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="이 전"
                android:layout_marginRight="20dp"
                android:background="@drawable/button2"
                android:textAppearance="@style/button2">
            </Button>

            <Button
                android:id="@+id/nextButton"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="다 음"
                android:layout_marginLeft="20dp"
                android:background="@drawable/button2"
                android:textAppearance="@style/button2">

            </Button>

        </LinearLayout>

    </LinearLayout>

</ScrollView>
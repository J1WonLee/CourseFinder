<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".exercise.ExerciseCourseRegit">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <EditText
            android:id="@+id/epname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="장소의 이름"
            android:textAppearance="@style/text2"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/etime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="예상 소요 시간"
            android:textAppearance="@style/text2"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="간략 설명"
            android:textAppearance="@style/text2"
            android:textSize="20dp" />


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <FrameLayout
            android:id="@+id/map"
            android:layout_width="match_parent"
            android:layout_height="424dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="115dp"
        android:gravity="center">

        <Button
            android:id="@+id/mapbtn1"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/button2"
            android:text="장소 모두 지우기"
            android:textAppearance="@style/button2" />

        <Button
            android:id="@+id/mapbtn2"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/button2"

            android:text="장소 선택 완료"
            android:textAppearance="@style/button2" />

    </LinearLayout>
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/menu_bottom"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_gravity="bottom"
        android:background="#D9EAD3"
        android:layout_marginBottom="15dp"
        app:labelVisibilityMode="labeled"
        app:menu="@menu/menu_bottom"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="674dp" />
</LinearLayout>
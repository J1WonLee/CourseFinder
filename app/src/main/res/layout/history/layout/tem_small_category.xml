<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".smallcategory.SmallCategory">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:gravity="center"
            android:text="카테고리 선택"
            android:textAlignment="center"
            android:textAppearance="@style/title1_" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_gravity="center"
            android:background="@drawable/category_textbox"
            android:padding="15dp"
            android:text="첫번째 대카테고리 선택"
            android:textAppearance="@style/text" />

        <GridView
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:id="@+id/gridViewId"
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:numColumns="3"/>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="15dp"
            android:layout_margin="10dp"
            android:text="두번째 대카테고리 선택"
            android:background="@drawable/category_textbox"
            android:textAppearance="@style/text"/>

        <GridView
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:id="@+id/gridViewId2"
            android:layout_width="match_parent"
            android:layout_height="370dp"
            android:numColumns="3"/>


        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="세번째 대카테고리"
            android:padding="15dp"
            android:layout_margin="10dp"
            android:background="@drawable/category_textbox"
            android:textAppearance="@style/text"/>

        <GridView
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:id="@+id/gridViewId3"
            android:layout_width="match_parent"
            android:layout_height="370dp"
            android:numColumns="3"/>

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="네번째 대카테고리"
            android:layout_margin="10dp"
            android:padding="15dp"
            android:background="@drawable/category_textbox"
            android:textAppearance="@style/text"/>

        <GridView
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:id="@+id/gridViewId4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:numColumns="3"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:padding="20dp"
            >

            <Button
                android:id="@+id/prevButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="80dp"
                android:text="이전"></Button>

            <Button
                android:id="@+id/nextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="다음">

            </Button>

        </LinearLayout>

    </LinearLayout>

</ScrollView>
